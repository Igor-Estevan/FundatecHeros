<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/herois"
        android:label="@string/app_name"
        android:roundIcon="@drawable/herois"
        android:supportsRtl="true"
        android:name=".App"
        android:theme="@style/Theme.FundatecHeros"
        tools:targetApi="31">

        <activity
            android:name=".home.views.splash.view.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".home.views.login.view.LoginActivity"
            android:exported="false" />
        <activity
            android:name=".home.views.home.view.HomeActivity"
            android:exported="false" />
        <activity
            android:name=".home.views.profile.view.ProfileActivity"
            android:exported="false" />
        <activity
            android:name=".home.views.heros.view.HeroActivity"
            android:exported="false" />
    </application>

</manifest>